<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle" android:useLevel="false">
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="8dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <solid android:color="@color/colorDivider" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" android:useLevel="false">
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="8dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <solid android:color="@color/colorDivider" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" android:useLevel="false">
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="8dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <solid android:color="#ffffff" />
        </shape>
    </item>

</selector>